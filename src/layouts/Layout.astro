---
import Header from "@/components/Header.astro";
import "@/styles/variables.css";
import "@/styles/global.css";
import "@/styles/animations.css";

interface Props {
  title: string;
  description?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description = "Développeur front-end freelance basé à Paris. Spécialisé en TypeScript, React et Svelte. Création de sites web performants et accessibles.",
} = Astro.props;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Martin Kinoo",
  url: "https://kinoo.dev",
  description,
  image: "https://kinoo.dev/og.jpg",
  areaServed: {
    "@type": "City",
    name: "Paris",
  },
  knowsAbout: [
    "TypeScript",
    "React",
    "Svelte",
    "Astro",
    "SolidJS",
    "Front-end Development",
  ],
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#181927" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://kinoo.dev/og.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Martin Kinoo" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://kinoo.dev/og.jpg" />

    <title>{title}</title>

    <!-- Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Page-specific head content -->
    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  /* ===== Gradient Border Card ===== */
  .gradient-border-card {
    position: relative;
    padding: 40px;
    flex: 1 1;
    transition:
      background 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    box-shadow:
      0 0 0 1px transparent,
      0 2px 4px transparent,
      0 12px 24px transparent;
    cursor: pointer;
    border-radius: 32px;
    height: 100%;
    z-index: 1;
  }

  .gradient-border-card .shimmer {
    background: linear-gradient(
      112deg,
      transparent 30%,
      rgba(248, 186, 136, 0.1) 40%,
      rgba(248, 186, 136, 0.3) 50%,
      rgba(248, 186, 136, 0.1) 60%,
      transparent 80%
    );
    pointer-events: none;
    position: absolute;
    inset: 0;
    z-index: 20;
    border-radius: 32px;
    background-size: 200% auto;
    opacity: 0;
    background-position: 150%;
  }

  .gradient-border-card:hover .shimmer {
    animation: shimmer var(--duration) cubic-bezier(0.8, 0, 0.05, 1);
  }
</style>
