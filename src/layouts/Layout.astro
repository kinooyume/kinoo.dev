<style is:global>
  @property --border-angle {
    inherits: false;
    initial-value: 0deg;
    syntax: "<angle>";
  }
  :root {
    --background-color: #181927;
    --background-frosted: rgba(24, 25, 39, 0.05);
    --color: #e0e0e0;
    --light-color: #f6f5f7;
    --extra-light-color: #f6f5f7;

    --border-angle: 360deg;
    --accent-color: #f8ba88;
    --secondary-accent-color: #c9a88d;
    --accent-brigth: #f6b17a;

    --card-first-background-color: #2d2d3b;
    --card-alt-background-color: #1c2638;

    --card-background-color: var(--card-alt-background-color);

    --h1-size: 96px;

    --h2-size: 38px;
    --h3-size: 24px;
    --subtitle-size: 22px;
    --font-size: 18px;
    --button-font-size: 15px;

    --section-margin: 142px;
  }

  .gradient-border-card {
    position: relative;
    padding: 40px;
    flex: 1 1;
    transition:
      background 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    box-shadow:
      0 0 0 1px transparent,
      0 2px 4px transparent,
      0 12px 24px transparent;
    cursor: pointer;
    broder-radius: 32px;
    height: 100%;
    z-index: 1;
    .shimmer {
      background: linear-gradient(
        112deg,
        transparent 30%,

        rgba(248, 186, 136, 0.1) 40%,
        rgba(248, 186, 136, 0.3) 50%,
        rgba(248, 186, 136, 0.1) 60%,
        transparent 80%
      );
      pointer-events: none;
      position: absolute;
      inset: 0;
      z-index: 20;
      border-radius: 32px;
      background-size: 200% auto;
      opacity: 0;
      background-position: 150%;
    }
  }
  .gradient-border-card:hover .shimmer {
    animation: shimmer var(--duration) cubic-bezier(0.8, 0, 0.05, 1);
  }

  @keyframes shimmer {
    0% {
      opacity: 0;
      background-position: -50%;
    }

    5% {
      opacity: 0.7;
    }

    10% {
      opacity: 0;
      background-position: 150%;
    }

    15% {
      opacity: 0;
    }

    to {
      opacity: 0;
    }
  }
  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-ExtraLight.ttf");
    font-weight: 100;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-Light.ttf");
    font-weight: 200;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-Thin.ttf");
    font-weight: 300;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-Medium.ttf");
    font-weight: 500;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-Regular.ttf");
    font-weight: 500;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-SemiBold.ttf");
    font-weight: 600;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-Bold.ttf");
    font-weight: 700;
    font-style: normal;
    /* font-display: swap; */
  }

  @font-face {
    font-family: "Outfit";
    src: url("/fonts/Outfit/Outfit-ExtraBold.ttf");
    font-weight: 800;
    font-style: normal;
    /* font-display: swap; */
  }

  html {
    box-sizing: border-box;
    font-family: Outfit, system-ui, sans-serif;
    background: var(--background-color);
    color: var(--color);
    scroll-behavior: smooth;

    scroll-padding-top: 126px;
  }
  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  body {
    margin: 0;
    padding: 0;
  }

  /* Base styles (replacing Tailwind preflight) */
  *,
  ::before,
  ::after {
    border-width: 0;
    border-style: solid;
  }

  a {
    color: inherit;
    text-decoration: inherit;
  }

  img,
  video {
    max-width: 100%;
    height: auto;
  }

  img,
  svg {
    display: block;
  }

  button {
    background-color: transparent;
    background-image: none;
    cursor: pointer;
    padding: 0;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
  }

  body.hero-animation main > *:not(#hero) {
    display: none;
  }

  h2 {
    font-weight: 300;
    line-height: 1;
    font-size: var(--h2-size);
    margin: 0;
    margin-bottom: 64px;
  }

  h3 {
    font-size: var(--h3-size);
    font-weight: 400;
    color: var(--secondary-accent-color);
    margin: 0;
    line-height: 1;
  }

  .subtitle {
    color: var(--accent-color);
    font-weight: 200;
    font-size: var(--subtitle-size);
    margin: 0;
  }

  p,
  label {
    font-size: var(--font-size);
    font-weight: 200;
    line-height: 1.4;
    color: var(--light-color);
  }

  b {
    font-weight: 600;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a.primary,
  button {
    border: none;
    display: inline-block;
    border-radius: 12px;
    transition: all 0.3s ease;
    height: 48px;
    padding: 0 24px;
    cursor: pointer;
  }

  a.primary,
  button.primary {
    font-size: var(--button-font-size);
    font-weight: 500;
    color: black;
    background-color: var(--accent-brigth);
    text-transform: capitalize;
  }

  a.primary {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  a.anime {
    transition: all 0.3s ease;
  }
  a svg path,
  a.cv {
    opacity: 0.8;
  }

  @media (hover: hover) {
    button.primary:hover,
    a.primary:hover,
    a.anime:hover,
    .link-wrapper.anime:hover,
    button.secondary:hover {
      transform: translateY(-4px);
    }

    button.primary:active,
    a.primary:active,
    a.anime:active,
    button.secondary:active {
      transform: translateY(5px);
      transition: 200ms;
    }
    a:hover svg path,
    a:hover.cv {
      opacity: 1;
    }
  }

  section {
    margin: var(--section-margin) 0;
  }

  @media screen and (max-width: 1368px) {
    :root {
      --h1-size: 92px;

      --h2-size: 48px;
      --h3-size: 24px;
      --subtitle-size: 24px;
      --font-size: 18px;
      --button-font-size: 15px;

      --section-margin: 192px;
    }
  }

  @media screen and (max-width: 900px) {
    :root {
      --h1-size: 86px;

      --h2-size: 44px;
      --h3-size: 20px;
      --subtitle-size: 20px;
      --font-size: 16px;
      --button-font-size: 15px;

      --section-margin: 148px;
    }
  }
  @media screen and (max-width: 600px) {
    :root {
      --h1-size: 64px;
      --h2-size: 36px;
      --h3-size: 18px;

      --section-margin: 94px;
    }
    html {
      scroll-padding-top: 92px;
    }
  }
  @media screen and (max-width: 450px) {
    :root {
      --h1-size: 48px;
    }
  }
</style>
