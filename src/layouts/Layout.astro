---
import Header from "@/components/header/Header.astro";
import MobileDrawer from "@/components/shared/organisms/MobileDrawer.astro";
import MobileSidebar from "@/components/header/MobileSidebar.astro";
import "@/styles/variables.css";
import "@/styles/global.css";
import "@/styles/animations.css";

interface Props {
  title: string;
  description?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description = "Développeur front-end freelance basé à Paris. Spécialisé en TypeScript, Svelte et Astro. Création de sites web performants et accessibles.",
} = Astro.props;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  name: "Martin Kinoo",
  url: "https://kinoo.dev",
  description,
  image: "https://kinoo.dev/og.jpg",
  areaServed: {
    "@type": "City",
    name: "Paris",
  },
  knowsAbout: [
    "TypeScript",
    "React",
    "Svelte",
    "Astro",
    "SolidJS",
    "Front-end Development",
  ],
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#181927" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://kinoo.dev/og.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Martin Kinoo" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://kinoo.dev/og.jpg" />

    <title>{title}</title>

    <!-- Structured Data -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(jsonLd)}
    />

    <slot name="head" />
  </head>
  <body>
    <Header>
      <slot name="header-nav" slot="nav" />
      <slot name="header-menu" />
    </Header>
    <slot />

    <div class="mobile-menu-drawer">
      <MobileDrawer id="mobile-menu" triggerId="mobile-menu-trigger">
        <slot name="mobile-sidebar">
          <MobileSidebar />
        </slot>
      </MobileDrawer>
    </div>
  </body>
</html>

<style is:global>
  .mobile-menu-drawer {
    display: none;
  }

  @media screen and (max-width: 1100px) {
    .mobile-menu-drawer {
      display: block;
    }
  }
</style>
