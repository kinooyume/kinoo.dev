---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import HeroInfo from "../components/HeroInfo.astro";
import Experiences from "../components/Experiences.astro";
import Appetences from "../components/Appetences.astro";
import Contact from "../components/Contact.astro";
import Formations from "../components/Formations.astro";
import Realisations from "../components/Realisations.astro";
import FloatingContact from "../components/FloatingContact.astro";
---

<Layout title="Martin Kinoo · Développeur freelance">
  <main>
    <Hero />
    <HeroInfo />
    <Experiences />
    <Realisations />
    <Appetences />
    <Formations />
    <!-- <Passions /> -->
    <Contact />
    <footer>
      <p 
        >© 2024 · Design et Code par <b>Martin Kinoo</b> · Réalisé avec <a
          href="https://figma.com">Figma</a
        >, <a href="https://astro.build">Astro</a> et <a
          href="https://tailwindcss.com/">tailwindcss</a
        >.
      </p>
    </footer>
      <FloatingContact />
  </main>
</Layout>

<style>
  footer {
    opacity: 0.8;
  }
  footer a {
    text-decoration: underline;
  }
  main {
    margin: auto;
    padding: 1rem 32px;
    max-width: 1368px;
    line-height: 1.6;
  }
  footer p {
    font-size: 15px;
    display: block;
    margin: 36px 0;
  }

  @media screen and (max-width: 900px) {
    main {
      padding: 1rem 16px;
    }
  }
</style>
