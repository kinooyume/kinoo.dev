    <FoundationsSection />
    <AtomsSection />
    <CardSection />
    <SliderSection />
    <SectionSection />
    <HeaderSection />
    <NavigationSection />
    <HeroSection />
    <FormSection />
    <ContactSection />
    <ArticlesSection />
    <FooterSection />
    <DSComponentsSection />
  </DSLayout>
</Layout>
