---
/**
 * DSAtomicLabel - Component Type Badge
 * Shows the atomic design level (Atom, Molecule, Organism, etc.)
 */
interface Props {
  type: string;
}

const { type } = Astro.props;
---

<p class="atomic-label">{type}</p>

<style>
  .atomic-label {
    display: inline-block;
    padding: 4px 12px;
    background-color: rgba(246, 177, 122, 0.15);
    border: 1px solid var(--accent-color);
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    color: var(--accent-bright);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 16px;
  }
</style>
