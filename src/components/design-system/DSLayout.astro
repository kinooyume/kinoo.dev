---
import Sidebar from "@/components/sidebar/Sidebar.tsx";
import { sidebarSections } from "./sections/index";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Design System", description } = Astro.props;
---

<div class="ds-container">
  <main class="ds-main">
    <h1>{title}</h1>
    {description && <p class="intro">{description}</p>}
    <p class="wip-notice">Work in progress.</p>

    <slot />

    <footer>
      <p>kinoo.dev Â· Design System</p>
    </footer>
  </main>

  <Sidebar sections={sidebarSections} class="ds-sidebar-desktop" client:load />
</div>

<style is:global>
  .ds-container {
    display: flex;
    min-height: calc(100vh - 80px);
    max-width: 1368px;
    margin: 0 auto;
    padding: 0 32px;
    gap: 48px;
    justify-content: space-between;
  }

  .ds-main {
    flex: 1;
    padding: 24px 0 64px 0;
    max-width: 900px;
    min-width: 0;
    overflow-x: auto;
  }

  .ds-main h1 {
    font-size: 48px;
    font-weight: 300;
    margin-bottom: 16px;
  }

  .intro {
    color: var(--color);
    margin-bottom: 16px;
    max-width: 600px;
  }

  .wip-notice {
    color: var(--accent-bright);
    font-size: 14px;
    font-style: italic;
    margin-bottom: 64px;
    padding: 12px 16px;
    background-color: var(--orange-tint);
    border-left: 3px solid var(--accent-bright);
    border-radius: 4px;
  }

  .ds-main section {
    margin: 0 0 80px 0;
    padding-top: 24px;
  }

  .ds-main section h2 {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 16px;
    margin-bottom: 12px;
  }

  .ds-main footer {
    min-height: 50vh;
    display: flex;
    align-items: flex-end;
    padding-bottom: 32px;
    opacity: 0.5;
  }

  .ds-main footer p {
    font-size: 14px;
  }

  /* matches mobile burger breakpoint (1100px) */
  @media screen and (max-width: 1100px) {
    .ds-container {
      flex-direction: column;
      padding: 0 16px;
      gap: 0;
    }

    .ds-main {
      padding: 24px 0;
    }

    .ds-sidebar-desktop {
      display: none;
    }
  }
</style>
