---
/**
 * HeaderMenu - Header navigation links container
 * Design System - Molecule
 */
import HeaderLink from "./HeaderLink.astro";
import github from "@/svgs/github.svg?raw";
import linkedin from "@/svgs/linkedin.svg?raw";
---

<div class="header-menu">
  <HeaderLink href="https://github.com/KinooYume" label="GitHub" external>
    <Fragment set:html={github} />
  </HeaderLink>
  <HeaderLink href="https://linkedin.com/in/martin-kinoo" label="LinkedIn" external>
    <Fragment set:html={linkedin} />
  </HeaderLink>
  <HeaderLink href="MartinKinooCV.pdf" label="CV" variant="badge" external />
  <HeaderLink href="/design-system" label="DS" variant="badge" />
  <a class="primary" href="/#contact">Me contacter</a>
</div>

<style>
  .header-menu {
    display: flex;
    align-items: center;
    opacity: 0;
    gap: 24px;
  }

  @media screen and (max-width: 600px) {
    .header-menu {
      gap: 20px;
    }

    .primary {
      display: none;
    }
  }
</style>
