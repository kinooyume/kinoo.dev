---
/**
 * Header Component Documentation
 * Design System - Organism
 */
import terminal from "@/svgs/terminal.svg?raw";
import DSBlock from "@/components/design-system/DSBlock.astro";
import DSPreview from "@/components/design-system/DSPreview.astro";
import DSCode from "@/components/design-system/DSCode.astro";
import DSPropsTable from "@/components/design-system/DSPropsTable.astro";
import DSNote from "@/components/design-system/DSNote.astro";
import DSStructure from "@/components/design-system/DSStructure.astro";
import DSSectionHeader from "@/components/design-system/DSSectionHeader.astro";
---

<section id="header">
  <DSSectionHeader title="Header" atomic="Organism" framework="astro" />
  <p>Sticky site header with navigation and frosted glass effect.</p>

  <DSBlock title="Preview">
    <div class="header-preview">
      <div class="header-demo">
        <a href="#header" class="title">
          <div class="terminal-wrapper">
            <Fragment set:html={terminal} />
          </div>
          Martin Kinoo
        </a>
      </div>
    </div>
  </DSBlock>

  <DSBlock title="Structure">
    <DSStructure
      rows={[
        { code: "header", description: "Sticky container with frosted glass" },
        { code: ".header", description: "Flex container (space-between)", indent: 1 },
        { code: "nav", description: "Left: logo + NavBar", indent: 2 },
        { code: "HeaderMenu", description: "Right: links + CTA", indent: 2 },
      ]}
    />
  </DSBlock>

  <DSBlock title="Frosted Glass">
    <DSPreview class="glass-demo">
      <div class="glass-sample">
        <code>backdrop-filter: blur(30px)</code>
        <span class="glass-note">+ gradient mask</span>
      </div>
    </DSPreview>
  </DSBlock>

  <DSBlock title="Responsive">
    <DSPropsTable
      headers={["Breakpoint", "Height", "Changes"]}
      rows={[
        ["Default", "120px", "Full layout"],
        ["<980px", "120px", "NavBar hidden"],
        ["<600px", "80px", "CTA hidden"],
      ]}
    />
  </DSBlock>

  <DSBlock title="Usage">
    <DSCode inline>&lt;Header /&gt;</DSCode>
    <DSNote>Included in Layout.astro. No props required.</DSNote>
  </DSBlock>
</section>

<style>
  .header-preview {
    background-color: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
  }

  .header-demo {
    display: flex;
    align-items: center;
    padding: 24px;
    background-color: var(--background-frosted);
    backdrop-filter: blur(10px);
  }

  .title {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 22px;
    font-weight: 200;
    text-decoration: none;
    color: var(--color);
    transition: opacity 0.2s;
  }

  .title:hover {
    opacity: 0.8;
  }

  .terminal-wrapper {
    margin-top: 4px;
  }

  .terminal-wrapper :global(svg) {
    width: 24px;
    height: 24px;
  }

  .glass-demo :global(.ds-preview) {
    background: linear-gradient(135deg, #2a3a5a 0%, #1a2540 50%, #2a3a5a 100%);
  }

  .glass-sample {
    background-color: rgba(24, 25, 39, 0.6);
    backdrop-filter: blur(10px);
    padding: 24px 32px;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .glass-sample code {
    font-size: 14px;
    color: var(--accent-bright);
  }

  .glass-note {
    font-size: 12px;
    color: var(--color);
    opacity: 0.6;
  }
</style>
