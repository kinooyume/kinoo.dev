---
interface Props {
  href: string;
  label: string;
  tooltip?: string;
  variant?: "icon" | "badge";
  external?: boolean;
}

const { href, label, tooltip, variant = "icon", external = false } = Astro.props;
const tooltipText = tooltip || label;

const externalProps = external
  ? { target: "_blank", rel: "noreferrer nofollow noopener" }
  : {};
---

<a
  class:list={["header-link", `header-link--${variant}`, "anime"]}
  href={href}
  aria-label={label}
  {...externalProps}
>
  {variant === "badge" ? label : <slot />}
  {variant === "icon" && <span class="tooltip">{tooltipText}</span>}
</a>

<style>
  .header-link {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .header-link:hover {
    opacity: 1;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-4px);
    background-color: var(--card-background-color);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 12px;
    font-weight: 500;
    color: var(--light-color);
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.2s ease;
  }

  .header-link:hover .tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(-8px);
  }

  /* Icon variant */
  .header-link--icon :global(svg) {
    width: 22px;
    height: 22px;
  }

  .header-link--icon :global(svg path) {
    fill: var(--light-color);
    transition: fill 0.3s ease;
  }

  .header-link--icon:hover :global(svg path) {
    fill: var(--accent-color);
  }

  /* Badge variant */
  .header-link--badge {
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 6px;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.5px;
    height: 22px;
    padding: 0 6px;
    color: var(--light-color);
  }

  .header-link--badge:hover {
    border-color: var(--accent-color);
    color: var(--accent-color);
  }

  @media screen and (max-width: 600px) {
    .header-link {
      transform: none !important;
    }
  }
</style>
