---
import Tag from "@/components/shared/atoms/Tag.astro";
import HeroSubtitle from "./HeroSubtitle.astro";
import AstroIcon from "@/svgs/astro.svg?raw";
import React from "@/svgs/react.svg?raw";
import Svelte from "@/svgs/svelte.svg?raw";
import Rescript from "@/svgs/rescript.svg?raw";
import Ts from "@/svgs/ts.svg?raw";
import Go from "@/svgs/go.svg?raw";

type TagProps = {
  title: string;
  icon?: string;
  highlight?: boolean;
};

const techs: TagProps[] = [
  { title: "Typescript", icon: Ts },
  { title: "Astro", icon: AstroIcon, highlight: true },
  { title: "React.js", icon: React, highlight: true },
  { title: "Svelte", icon: Svelte, highlight: true },
  { title: "Rescript", icon: Rescript },
  { title: "Golang", icon: Go },
  { title: "Votre stack ?" },
];
---

<script src="../../lib/animations/heroAnime.ts"></script>
<section id="hero">
  <div class="main">
    <div class="content">
      <div class="title">
        <HeroSubtitle subtitle="Développeur Frontend Freelance" />
        <h1><span>Martin</span> <span>Kinoo</span></h1>
      </div>
      <div class="description">
        <h2 class="punchline">Du frontend bien pensé, tout simplement.</h2>
        <p class="catchphrase">
          Applications web claires, modulaires et évolutives, sans complexité
          inutile.
        </p>
        <p>
          Je simplifie les choix techniques et je sécurise l'architecture pour
          que les projets avancent de façon prévisible. Force de proposition, je
          m'intègre facilement aux équipes et aide à prendre les bonnes
          décisions au bon moment.
        </p>
      </div>
      <ul>
        {
          techs.map((tech) => (
            <li>
              <Tag
                title={tech.title}
                hero={true}
                icon={tech.icon}
                highlight={tech.highlight}
              />
            </li>
          ))
        }
      </ul>
    </div>
    <img
      loading="lazy"
      class="image hero-image"
      src="images/profil.png"
      alt="martin kinoo"
    />
  </div>
</section>

<style>
  :root {
    --hero-font-size: 20px;
    --hero-span-size: 36px;
  }

  .main {
    display: flex;
    justify-content: space-between;
  }

  h1 {
    font-size: var(--h1-size);
    line-height: 90px;
    margin: 0;
    font-weight: 200;
    color: var(--color);
  }

  h1 span {
    opacity: 0;
    display: inline-block;
  }
  .description > * {
    opacity: 0;
  }

  .punchline {
    font-size: 32px;
    font-weight: 200;
    line-height: 1.2;
    color: var(--color);
    margin: 0;
  }

  .catchphrase {
    color: var(--accent-color);
    font-weight: 200;
    font-size: calc(var(--hero-font-size) + 2px);
  }

  .catchphrase {
    margin-bottom: 16px;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }
  .content {
    display: flex;
    flex-direction: column;
    gap: 58px;
    justify-content: space-between;
    max-width: 750px;
  }

  p {
    font-size: var(--hero-font-size);
    font-weight: 200;
  }

  a {
    color: var(--color);
    text-decoration: none;
    font-weight: 600;
  }

  #hero {
    margin-top: 32px;
  }

  strong {
    font-weight: 600;
  }
  img {
    margin: auto 0;
    opacity: 0;
  }

  @media screen and (max-width: 1368px) {
    :root {
      --hero-font-size: 18px;
      --hero-span-size: 34px;
    }
    .punchline {
      font-size: 28px;
    }
  }
  @media screen and (max-width: 1145px) {
    img {
      display: none;
    }
  }

  @media screen and (max-width: 600px) {
    :root {
      --hero-span-size: 28px;
      --hero-font-size: 16px;
    }
    h1 {
      line-height: 1;
    }
    .punchline {
      font-size: 22px;
    }
    #hero {
      margin-top: 32px;
    }
    .content {
      gap: 28px;
    }
  }

  @media screen and (max-width: 450px) {
    :root {
      --hero-span-size: 24px;
    }
  }

  @media screen and (max-width: 430px) {
    :root {
      --hero-span-size: 20px;
    }
  }
  @media screen and (max-width: 340px) {
    :root {
      --hero-span-size: 18px;
    }
  }
</style>
