<style>
  :root {
    --heroinfo-font-size: 18px;
    --heroinfo-h2-size: 28px;
  }

  .hero-info-card {
    background: linear-gradient(45deg, #172033, #181927 50%, #172033) padding-box,
      conic-gradient(
          from var(--border-angle),
          rgba(71, 85, 105, 0.48) 80%,
          #f8ba88 86%,
          #f6b17a 90%,
          #f8ba88 94%,
          rgba(71, 85, 105, 0.48)
        )
        border-box;
    border-radius: 1rem;
    border: 1px solid transparent;
    animation: border 4s linear infinite;
  }

  @keyframes border {
    to {
      --border-angle: 360deg;
    }
  }

  section {
    border-radius: 30px;
    display: flex;
    justify-content: space-between;
    gap: 48px;
    flex-wrap: wrap;
    padding: 48px 72px;
  }

  section div {
    max-width: 350px;
    transition: transform 0.3s;
  }

  section div:hover {
    transform: scale(1.02);
  }

  h2 {
    font-size: var(--heroinfo-h2-size);
    font-weight: 200;
    color: white;
    margin-bottom: 28px;
  }

  p {
    font-weight: 200;
    color: #8f8f97;
    font-size: var(--heroinfo-font-size);
  }

  @media screen and (max-width: 1368px) {
    :root {
      --heroinfo-font-size: 18px;
      --heroinfo-h2-size: 28px;
    }
    section div {
      max-width: 46%;
    }
  }
  @media screen and (max-width: 900px) {
    :root {
      --heroinfo-font-size: 18px;
      --heroinfo-h2-size: 28px;
    }
    section {
      padding: 48px 24px;
    }
    section div {
      max-width: unset;
    }
  }

  @media screen and (max-width: 600px) {
    :root {
      --heroinfo-font-size: 16px;
      --heroinfo-h2-size: 24px;
    }
  }
</style>
