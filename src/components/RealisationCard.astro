---
import arrow from "../svgs/arrow.svg?raw";
import Slider from "./Slider.tsx";
type Props = {
  id: string;
  reverse?: boolean;
  pictures: string[];
};

const { id, reverse, pictures } = Astro.props;
---

<div class=`card gradient-border-card ${reverse ? "reverse" : ""}`>
  <div class="title">
    <slot name="title" />
  </div>
  <div class="desription">
    <slot name="description" />
  </div>
  <div class="gallery">
    <Slider client:load pictures={pictures}>
      <Fragment set:html={arrow} />
    </Slider>
  </div>
  <div class="shimmer"></div>
</div>

<style>
  .card {
    display: grid;
    padding: 48px;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, minmax(0, auto));
    grid-column-gap: 64px;
    grid-row-gap: 32px;
    cursor: auto;
    --duration: 16s;
  }

  .title {
    grid-area: 1 / 1 / 2 / 2;
  }
  .description {
    grid-area: 2 / 1 / 3 / 2;
  }
  .gallery {
    margin-top: auto;
    grid-area: 1 / 2 / 3 / 3;
  }

  @media screen and (min-width: 1100px) {
    .reverse {
      .title {
        grid-area: 1 / 2 / 2 / 3;
      }
      .description {
        grid-area: 2 / 2 / 3 / 3;
      }
      .gallery {
        grid-area: 1 / 1 / 3 / 2;
      }
    }
  }

  @media screen and (max-width: 1100px) {
    .card {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(3, minmax(0, auto));
      grid-row-gap: 36px;
    }

    .title {
      grid-area: 1 / 1 / 2 / 2;
    }
    .gallery {
      grid-area: 2 / 1 / 3 / 2;
    }
    .description {
      grid-area: 3 / 1 / 4 / 2;
    }
  }

  @media screen and (max-width: 900px) {
    .card {
      padding: 36px 24px;
    }
  }
</style>
