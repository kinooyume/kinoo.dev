---
import DSBlock from "@/components/design-system/DSBlock.astro";
import DSStructure from "@/components/design-system/DSStructure.astro";
import DSSectionHeader from "@/components/design-system/DSSectionHeader.astro";
---

<section id="contact-doc">
  <DSSectionHeader title="Contact" atomic="Organism" framework="astro" />
  <p>
    Full contact section combining description text and an interactive form
    (SolidJS).
  </p>

  <DSBlock title="Structure">
    <DSStructure
      rows={[
        {
          code: '<section id="contact">',
          description: "Main container with animation attribute",
        },
        { code: "<h2>", description: "Section title", indent: 1 },
        {
          code: ".contact-content",
          description: "Flexbox container",
          indent: 1,
        },
        {
          code: ".contact-description",
          description: "Left column with intro text",
          indent: 2,
        },
        {
          code: "<ContactForm />",
          description: "SolidJS form component",
          indent: 2,
        },
      ]}
    />
  </DSBlock>


</section>
