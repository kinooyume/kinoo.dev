---
import ContactForm from "./ContactForm.tsx";

const subtitleLetters = "Parlons de".replace(
  /\S/g,
  "<span class='reveal-letter'>$&</span>",
);
const titleLetters = "Votre projet".replace(
  /\S/g,
  "<span class='reveal-letter'>$&</span>",
);
---

<section id="contact" data-animate-section>
  <span class="subtitle" data-reveal-letters>
    <Fragment set:html={subtitleLetters} />
  </span>
  <h2 data-reveal-letters>
    <Fragment set:html={titleLetters} />
  </h2>
  <div class="contact-content">
    <div class="contact-description">
      <p>
        Vous cherchez un développeur frontend freelance expérimenté pour lancer
        un produit, faire évoluer une application ou renforcer votre équipe ?
      </p>
      <br />
      <p>
        Décrivez votre contexte et vos objectifs. Je vous recontacte rapidement
        pour vous proposer des solutions claires, adaptées et pragmatiques.
      </p>
    </div>
    <ContactForm
      client:load
      accessToken={import.meta.env.PUBLIC_WEB3FORMS_ACCESS_KEY}
    />
  </div>
</section>

<style>
  section {
    margin: var(--section-margin) 0;
  }

  .subtitle {
    display: block;
    color: var(--accent-color);
    font-weight: 200;
    font-size: var(--subtitle-size);
    margin: 0;
  }

  h2 {
    display: block;
    overflow: hidden;
    padding-bottom: 0.15em;
  }

  .contact-description p {
    font-size: var(--hero-font-size);
    font-weight: 200;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.4fr;
    gap: clamp(24px, 1.24rem + 1.13vw, 36px);
    align-items: start;
  }

  @media screen and (max-width: 1024px) {
    .contact-content {
      grid-template-columns: 1fr;
    }
  }
</style>
