---
/**
 * Button Documentation
 * Design System - Atom
 * Note: Button is a style pattern, not a component file
 */
import DSBlock from "@/components/design-system/DSBlock.astro";
import DSPreview from "@/components/design-system/DSPreview.astro";
import DSCode from "@/components/design-system/DSCode.astro";
import DSPropsTable from "@/components/design-system/DSPropsTable.astro";
import DSNote from "@/components/design-system/DSNote.astro";
---

<section id="button">
  <h2>Button</h2>
  <p class="atomic-label">Atom</p>
  <p>Interactive buttons with primary and secondary variants.</p>

  <DSBlock title="Primary Button">
    <DSPreview>
      <button class="primary">Primary Button</button>
    </DSPreview>
    <DSCode inline>&lt;button class="primary"&gt;...&lt;/button&gt;</DSCode>
  </DSBlock>

  <DSBlock title="Link as Button">
    <DSPreview>
      <a href="#button" class="primary">Link Button</a>
    </DSPreview>
    <DSCode inline>&lt;a href="#" class="primary"&gt;...&lt;/a&gt;</DSCode>
  </DSBlock>

  <DSBlock title="Animated Link">
    <DSPreview>
      <a href="#button" class="anime">Animated Link</a>
    </DSPreview>
    <DSCode inline>&lt;a href="#" class="anime"&gt;...&lt;/a&gt;</DSCode>
  </DSBlock>

  <DSBlock title="CSS Classes">
    <DSPropsTable
      headers={["Class", "Description"]}
      rows={[
        [{ code: ".primary" }, "Orange background, black text, rounded corners"],
        [{ code: ".anime" }, "Adds hover lift animation"],
        [{ code: ".secondary" }, "Secondary button style"],
      ]}
    />
  </DSBlock>

  <DSBlock title="Interactions">
    <DSNote>
      Buttons with <code>.primary</code> or <code>.anime</code> classes have hover states that lift the element by 4px and active states that push down 5px.
    </DSNote>
  </DSBlock>
</section>
