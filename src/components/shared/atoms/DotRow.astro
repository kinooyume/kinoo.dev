---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["dot-row", className]}>
  <slot />
</div>

<style>
  .dot-row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 12px;
  }
</style>

<style is:global>
  .dot-row > * {
    position: relative;
  }

  .dot-row > * + *::before {
    content: "Â·";
    position: absolute;
    left: -6px;
    transform: translateX(-50%);
    color: var(--dot-color, currentColor);
    pointer-events: none;
  }
</style>
