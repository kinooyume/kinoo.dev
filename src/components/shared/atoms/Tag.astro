---
interface Props {
  title: string;
  icon?: string;
  animated?: boolean;
  highlight?: boolean;
  outline?: boolean;
}

const { animated, title, icon, highlight, outline } = Astro.props;
---

<div class=`tag ${animated ? "tag-animated" : "show"} ${highlight ? "highlight" : ""} ${outline ? "outline" : ""}`>
  {icon && <Fragment set:html={icon} />}
  <span>{title}</span>
</div>

<style is:global>
  .tag svg {
    width: 16px;
    height: 16px;
  }

  @media screen and (max-width: 600px) {
    .tag svg {
      width: 12px;
      height: 12px;
    }
  }
</style>

<style>
  :root {
    --span-tag-size: clamp(12px, 0.62rem + 0.42vw, 14px);
  }
  div {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 18px;
    border-radius: 12px;
    background-color: var(--card-surface-input);
  }

  div.highlight {
    border: 1px solid var(--accent-color);
  }
  div.outline {
    background-color: transparent;
    border: 1px solid var(--orange-border);
    color: var(--accent-color);
  }
  span {
    font-size: var(--span-tag-size);
    font-weight: 200;
  }
  .tag:not(.tag-animated) {
    background-color: var(--accent-tint);
    color: var(--accent-color);
  }
  .tag {
    opacity: 0;
  }
  .tag.show {
    opacity: 1;
  }

  @media screen and (max-width: 900px) {
    div {
      padding: 6px 12px;
    }
  }

  @media screen and (max-width: 600px) {
    div {
      padding: 4px 10px;
      gap: 5px;
    }
    span {
      font-size: 0.75rem;
      font-weight: 500;
      line-height: 1.25rem;
    }
  }
</style>
