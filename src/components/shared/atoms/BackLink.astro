---
import Link from "./Link.astro";
import arrow from "@/svgs/arrow.svg?raw";

type Props = {
  href: string;
  text: string;
};

const { href, text } = Astro.props;
---

<Link href={href} text={text} class="back-link">
  <span class="back-arrow" slot="prepend" set:html={arrow} />
</Link>

<style>
  .back-arrow :global(svg) {
    transform: rotate(180deg);
    width: 12px;
    height: 12px;
  }

  .back-arrow :global(svg path) {
    fill: currentColor;
  }
</style>
