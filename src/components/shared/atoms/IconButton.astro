---
/**
 * IconButton - Reusable icon button
 * Design System - Atom
 */
interface Props {
  id?: string;
  label: string;
  class?: string;
  variant?: "default" | "floating";
}

const { id, label, class: className, variant = "default" } = Astro.props;
---

<button
  id={id}
  class:list={["icon-button", `icon-button--${variant}`, className]}
  aria-label={label}
>
  <slot />
</button>

<style>
  .icon-button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background-color: var(--card-alt-background-color);
    border: 1px solid var(--border-color);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .icon-button:hover {
    background-color: var(--card-hover-background);
    border-color: var(--border-hover-color);
  }

  .icon-button--floating {
    position: fixed;
    z-index: 1001;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
</style>
