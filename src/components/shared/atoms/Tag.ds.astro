---
import TagComponent from "./Tag.astro";
import terminal from "@/svgs/terminal.svg?raw";
import DSBlock from "@/components/design-system/DSBlock.astro";
import DSPreview from "@/components/design-system/DSPreview.astro";
import DSCode from "@/components/design-system/DSCode.astro";
import DSNote from "@/components/design-system/DSNote.astro";
import DSPropsTable from "@/components/design-system/DSPropsTable.astro";
import DSSectionHeader from "@/components/design-system/DSSectionHeader.astro";
---

<section id="tag">
  <DSSectionHeader title="Tag" atomic="Atom" framework="astro" />

  <DSBlock title="Default">
    <DSPreview>
      <TagComponent title="TypeScript" />
    </DSPreview>
    <DSCode inline>title="TypeScript"</DSCode>
  </DSBlock>

  <DSBlock title="Section Themed">
    <DSNote>
      Tags inherit <code>--accent-color</code> from the parent section and adapt their background tint and left border accordingly.
    </DSNote>
    <DSPreview>
      <div class="themed-tags">
        <div style="--accent-color: var(--orange); --accent-tint: var(--orange-tint);">
          <TagComponent title="React" />
          <TagComponent title="TypeScript" />
        </div>
        <div style="--accent-color: var(--pink); --accent-tint: var(--pink-tint);">
          <TagComponent title="Vue.js" />
          <TagComponent title="GraphQL" />
        </div>
        <div style="--accent-color: var(--green); --accent-tint: var(--green-tint);">
          <TagComponent title="Node.js" />
          <TagComponent title="PostgreSQL" />
        </div>
        <div style="--accent-color: var(--purple); --accent-tint: var(--purple-tint);">
          <TagComponent title="Docker" />
          <TagComponent title="AWS" />
        </div>
      </div>
    </DSPreview>
  </DSBlock>

  <DSBlock title="With Icon">
    <DSPreview>
      <TagComponent title="Terminal" icon={terminal} />
    </DSPreview>
    <DSCode inline>title="Terminal" icon=&#123;terminalSvg&#125;</DSCode>
  </DSBlock>

  <DSBlock title="Highlighted">
    <DSPreview>
      <TagComponent title="Featured" highlight />
    </DSPreview>
    <DSCode inline>title="Featured" highlight</DSCode>
  </DSBlock>

  <DSBlock title="Outline">
    <DSPreview>
      <TagComponent title="Headless" outline />
      <TagComponent title="Design System" outline />
      <TagComponent title="Composable" outline />
    </DSPreview>
    <DSCode inline>title="Headless" outline</DSCode>
  </DSBlock>

  <DSBlock title="Props">
    <DSPropsTable
      headers={["Prop", "Type", "Default", "Description"]}
      rows={[
        [
          { code: "title" },
          "string",
          "required",
          "The text content of the tag",
        ],
        [{ code: "icon" }, "string", "-", "SVG icon as raw string"],
        [{ code: "highlight" }, "boolean", "false", "Adds accent border"],
        [{ code: "outline" }, "boolean", "false", "Transparent background with accent border"],
        [{ code: "animated" }, "boolean", "false", "Starts hidden for reveal animation"],
      ]}
    />
  </DSBlock>

  <DSBlock title="Responsive">
    <DSPropsTable
      headers={["Property", "Desktop", "≤900px", "≤600px"]}
      rows={[
        [{ code: "font-size" }, "14px", "~13px", "12px"],
        [{ code: "padding" }, "8px 18px", "6px 12px", "4px 10px"],
        [{ code: "icon" }, "16px", "16px", "12px"],
      ]}
    />
  </DSBlock>
</section>

<style>
  .themed-tags {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .themed-tags > div {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }
</style>
