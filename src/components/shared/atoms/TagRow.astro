---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["tag-row", className]}>
  <slot />
</div>

<style>
  .tag-row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: clamp(6px, 0.32rem + 0.21vw, 8px);
    margin-top: auto;
    padding-top: clamp(18px, 0.59rem + 1.89vw, 36px);
  }
</style>
