---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["card-description", className]}>
  <slot />
</div>

<style>
  .card-description {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: clamp(10px, 0.57rem + 0.21vw, 12px);
  }

  .card-description > :global(br) {
    display: none;
  }
</style>
