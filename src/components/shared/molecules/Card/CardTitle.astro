---
import H3Tagged from "@/components/shared/atoms/H3Tagged.astro";
import DotRow from "@/components/shared/atoms/DotRow.astro";

type Props = {
  title: string;
  tag: string;
  href: string;
  label: string;
  location?: string;
  date?: string;
};

const { title, tag, href, label, location, date } = Astro.props;
---

<div class="card-title">
  <H3Tagged title={title} tag={tag} />
  <DotRow>
    <a href={href} rel="noreferrer nofollow noopener" target="_blank">{label}</a>
    {location && <span>{location}</span>}
    {date && <span>{date}</span>}
  </DotRow>
</div>

<style>
  .card-title {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card-title :global(.dot-row span),
  .card-title :global(.dot-row a) {
    font-size: var(--card-title-font-size, 16px);
    font-weight: 400;
    color: rgba(143, 143, 151, 0.7);
  }

  a {
    text-decoration: underline;
  }

  @media screen and (max-width: 900px) {
    .card-title {
      gap: 2px;
    }
  }
</style>
