---
import H3Tagged from "./H3Tagged.astro";
import Card from "./Card.astro";
import Slider from "./Slider.tsx";
import arrow from "@/svgs/arrow.svg?raw";
import TagLink from "./TagLink.astro";
import ekeynoxIcon from "@/svgs/ekeynox.svg?raw";
import Tag from "./Tag.astro";
import Spotlight from "./Spotlight.astro";
---

<section id="realisations" data-animate-section>
  <span class="subtitle">Mes</span>
  <h2>Réalisations</h2>
  <div class="grid" id="realisations-grid" data-spotlight>
    <Spotlight color="#66c384">
      <Card reverse={true}>
        <div slot="title" class="title-wrapper">
          <div class="title-container">
            <H3Tagged title="Arteflix" tag="Projet perso" />
            <TagLink href="https://arteflix.kinoo.dev" text="Visiter le site" />
          </div>
          <div class="title-logo">
            <img alt="arteflix" src="/images/arteflix/logo.webp" />
          </div>
        </div>
        <div slot="description">
          <p>
            Arteflix est un site web permetant d'accéder au catalogue d'<b
              >ARTE</b
            > en reprenant le system design de <b>Netflix</b>.
          </p>
          <br />
          <p>
            Le site web respecte l'url du site arte.tv, il suffit donc de
            changer l'url pour accéder au même contenu.
          </p>
          <br />
          <br />
          <div class="row">
            <Tag title="React" />
            <Tag title="Next.js" />
            <Tag title="Rescript" />
            <Tag title="Storybook" />
          </div>
        </div>
        <Slider slot="gallery" client:load pictures={["arteflix/01.webp", "arteflix/02.webp", "arteflix/03.webp"]}>
          <Fragment set:html={arrow} />
        </Slider>
      </Card>
    </Spotlight>
    <Spotlight color="#66c384">
      <Card>
        <div slot="title" class="title-wrapper">
          <div class="title-container">
            <H3Tagged title="Ekeynox" tag="Projet perso" />
            <TagLink href="https://ekeynox.kinoo.dev" text="Visiter le site" />
          </div>
          <div class="title-logo">
            <Fragment set:html={ekeynoxIcon} />
          </div>
        </div>
        <div slot="description">
          <p>
            Ekeynox est un jeu de <b>dactylographie</b>, permettant de
            s'entrainer à taper au clavier, plus rapidement et sans fautes.
          </p>
          <br />
          <p>
            Le jeu propose 2 modes de jeu, un mode <b>course de mot</b> et un mode
            <b>contre la montre</b> et différent type de contenu, à savoir <b
              >des mots aléatoires</b
            >, des <b>citations</b> ou un <b>texte personnalisé</b>.
          </p>
          <br />
          <p>
            À la fin d'une partie, le joueur peut consulter ses <b>
              statistiques</b
            > et
            <b>rejouer</b> en mode fantôme contre son score précédent.
          </p>
          <br />
          <div class="row">
            <Tag title="SolidJS" />
            <Tag title="SolidStart" />
            <Tag title="Figma" />
          </div>
        </div>
        <Slider
          slot="gallery"
          client:load
          pictures={[
            "ekeynox/01.webp",
            "ekeynox/02.webp",
            "ekeynox/03.webp",
            "ekeynox/04.webp",
            "ekeynox/05.webp",
            "ekeynox/06.webp",
            "ekeynox/07.webp",
            "ekeynox/08.webp",
          ]}
        >
          <Fragment set:html={arrow} />
        </Slider>
      </Card>
    </Spotlight>
  </div>
</section>

<script>
  import { spotlight } from "@/lib/dom/spotlight";

  const container = document.getElementById("realisations-grid");
  if (container) {
    spotlight(container);
  }
</script>

<style>
  #realisations {
    --accent-color: #66c384;
    --secondary-accent-color: #d1edcf;
  }
  .row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 8px;
  }
  .grid {
    display: grid;
    grid-row-gap: 26px;
    grid-column-gap: 26px;
  }
  .title-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .title-logo {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #1f2233;
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 8px;
    padding: 8px;
    height: 51px;
    width: 51px;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4px;
    align-items: flex-start;
  }

  @media screen and (max-width: 320px) {
    .title-logo {
      display: none;
    }
  }
</style>
