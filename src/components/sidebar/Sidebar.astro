---
export interface SidebarItem {
  label: string;
  href: string;
}

interface Props {
  title: string;
  items: SidebarItem[];
}

const { title, items } = Astro.props;
---

<aside class="sidebar">
  <nav>
    <h3>{title}</h3>
    <ul>
      {
        items.map((item) => (
          <li>
            <a href={item.href}>{item.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 126px;
    width: 220px;
    height: fit-content;
    padding: 24px 24px 24px 0;
    flex-shrink: 0;
  }

  .sidebar h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--accent-color);
    margin-bottom: 16px;
  }

  .sidebar ul {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .sidebar a {
    display: block;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 400;
    color: var(--light-color);
    transition: all 0.2s ease;
  }

  .sidebar a:hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: var(--accent-color);
  }

  .sidebar a.active {
    background-color: rgba(248, 186, 136, 0.12);
    color: var(--accent-color);
  }

  @media screen and (max-width: 900px) {
    .sidebar {
      position: static;
      width: 100%;
      padding: 16px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .sidebar ul {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 8px;
    }
  }
</style>
