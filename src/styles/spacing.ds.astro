---
/**
 * Spacing Documentation
 * Design System - Foundations
 */
import DSBlock from "@/components/design-system/DSBlock.astro";
import DSPropsTable from "@/components/design-system/DSPropsTable.astro";
---

<section id="spacing">
  <h2>Spacing</h2>
  <p>Consistent spacing scale used throughout the application.</p>

  <DSBlock title="Scale">
    <div class="spacing-grid">
      <div class="spacing-item">
        <div class="spacing-box" style="width: 4px; height: 4px;"></div>
        <code>4px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 8px; height: 8px;"></div>
        <code>8px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 12px; height: 12px;"></div>
        <code>12px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 16px; height: 16px;"></div>
        <code>16px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 24px; height: 24px;"></div>
        <code>24px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 32px; height: 32px;"></div>
        <code>32px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 48px; height: 48px;"></div>
        <code>48px</code>
      </div>
      <div class="spacing-item">
        <div class="spacing-box" style="width: 64px; height: 64px;"></div>
        <code>64px</code>
      </div>
    </div>
  </DSBlock>

  <DSBlock title="Section Margin">
    <DSPropsTable
      headers={["Variable", "Default", "1368px", "900px", "600px"]}
      rows={[
        [{ code: "--section-margin" }, "142px", "192px", "148px", "94px"],
      ]}
    />
  </DSBlock>
</section>

<style>
  .spacing-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    align-items: flex-end;
    background-color: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 32px;
  }

  .spacing-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .spacing-box {
    background-color: var(--accent-bright);
    border-radius: 4px;
  }

  .spacing-item code {
    font-size: 12px;
    color: var(--color);
    opacity: 0.7;
  }
</style>
